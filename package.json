{
  "name": "boilerplate-api-expressjs",
  "version": "1.0.0",
  "description": "Boilerplate of Node.JS API using Mongoose & Repository pattern",
  "main": "src/app.ts",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "start": "npm run build && node build/src/app.js",
    "serverless": "sls offline start",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "test": "NODE_ENV=test && LOG_LEVEL=debug jest ./src/tests",
    "coverage": "LOG_LEVEL=debug jest --coverage ./tests"
  },
  "author": "Julien Maffar",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^26.6.3",
    "jest-junit-reporter": "^1.1.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "serverless-bundle": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "supertest": "^6.3.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.8.3",
    "mongodb": "^5.1.0",
    "mongoose": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "serverless-http": "^3.1.1",
    "slspress": "^2.2.5",
    "uuidv4": "^6.2.13",
    "winston": "^3.8.2"
  }
}
